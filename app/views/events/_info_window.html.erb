<img src="<%= event.photos[1] %>" class="card-img-top" alt="<%= event.name %>">
<div class="card-body" >
  <h2 class="card-title"><%= event.name %></h2>
  <%= link_to 'Voir cette offre', event_path(event), class: 'btn btn-brown' %>
  <p class="card-text"><%= event.description.truncate(100) %></p>
</div>
