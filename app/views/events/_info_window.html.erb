<div class="card card-shadow m-1 d-flex">
  <div class="img-card">
    <% if event.photos.attached? %>
      <%= cl_image_tag(event.photos.first.key, class: 'p-1 m-0 img-fluid', alt: event.name) %>
    <% else %>
      <%= image_tag(asset_path('no_image.png'), class: 'p-1 m-0 img-fluid', alt: event.name) %>
    <% end %>
  </div>
  <div class="card-body p-2" >
    <p class="card-title m-0"><strong><%= event.name %></strong></p>
    <div class="d-flex align-items-center">
        <img src="<%= asset_path('location-icon.png') %>" alt="Location Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
        <p class="card-text card-text-address"><%= event.address%></p>
    </div>
    <div class="d-flex align-items-center mb-2">
      <img src="<%= asset_path('calendar-icon.png') %>" alt="Calendar Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
      <p class="card-text mt-0"><%= event.date_event %></p>
    </div>
    <%= link_to 'See Event', event_path(event), class: 'btn btn-secondary' %>
  </div>
</div>
