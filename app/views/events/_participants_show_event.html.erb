<div class="d-flex align-items-center">
  <h5 class="me-2 mb-0">
    Participants: <%= Sub.where(event_id: event.id).count+1 %>/<%= event.participants_max %>
  </h5>
  <button class="btn btn-info p-1" type="button" data-bs-toggle="collapse" data-bs-target="#followers-<%= event.id %>" aria-expanded="false" aria-controls="followers-<%= event.id %>">
    <i class="fa-solid fa-chevron-down"></i>
  </button>
</div>
<div class="collapse mt-2" id="followers-<%= event.id %>">
  <%= link_to user_path(User.find_by_id(event.user_id)), data: { turbo_frame: "_top" }, target: '_blank', class: 'text-decoration-none text-dark' do %>
    <div class="mb-2 d-flex align-items-center">
      <%= render 'layouts/set_vava', vava: User.find_by_id(event.user_id) %>
      <span class="ms-2"><%= User.find_by_id(event.user_id).username %></span>
      <i class="fa-solid fa-crown text-yellow ms-2"></i>
    </div>
  <% end %>

  <% Sub.where(event_id: event.id).each do |sub| %>
    <% user = User.find_by_id(sub.user_id) %>
    <%= link_to user_path(user), data: { turbo_frame: "_top" }, target: '_blank', class: 'text-decoration-none text-dark' do %>
      <div class="mb-2 d-flex align-items-center">
        <%= render 'layouts/set_vava', vava: user %>
        <span class="ms-2"><%= user.username %></span>
      </div>
    <% end %>
  <% end %>
</div>
