<div class="d-flex">
  <h4 class="text-dark-green"><strong>Participants</strong></h4>
  <p class="text-dark-green">Number: <%= Sub.where(event_id: event.id).count %></p>
  <button class="btn btn-secondary mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#followers-<%= event.id %>" aria-expanded="false" aria-controls="followers-<%= event.id %>">
    <i class="fa-solid fa-chevron-down"></i>
  </button>
</div>
<div class="collapse mt-2" id="followers-<%= event.id %>">
  <div>
    <%= render 'layouts/set_vava', vava: User.find_by_id(event.user_id) %>
    <%= User.find_by_id(event.user_id).username%>
    <%= link_to 'Open profile', user_path(User.find_by_id(event.user_id)), data: {turbo_frame: "_top"}, target: '_blank', class: 'btn btn-secondary' %>
    <i class="fa-solid fa-crown"></i>
  </div>
  <%Sub.where(event_id: event.id).each do |sub|%>
    <%user = User.find_by_id(sub.user_id) %>
      <div>
        <%= render 'layouts/set_vava', vava: user %>
        <%= user.username %>
        <%= link_to 'Open profile', user_path(user), data: {turbo_frame: "_top"}, target: '_blank', class: 'btn btn-secondary' %>
      </div>
  <% end %>
</div>
