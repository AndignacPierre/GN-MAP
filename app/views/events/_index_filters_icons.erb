<% case category %>
  <% when "<label for=\"category_murder\">Murder</label>" %>
    <%= image_tag "cat-murder-icon.png", alt: "Murder category", size: "30x30" %>
  <% when "<label for=\"category_zombie\">Zombie</label>" %>
    <%= image_tag "cat-zombie-icon.png", alt: "Zombie category", size: "30x30" %>
  <% when "<label for=\"category_fantasy\">Fantasy</label>" %>
    <%= image_tag "cat-fantasy-icon.png", alt: "Fantasy category", size: "30x30" %>
  <% when "<label for=\"category_sf\">SF</label>" %>
    <%= image_tag "cat-SF-icon.png", alt: "Science-Fiction category", size: "30x30" %>
  <% when "<label for=\"category_historical\">Historical</label>" %>
    <%= image_tag "cat-historical-icon.png", alt: "Historical category", size: "30x30" %>
  <% else %>
    <%= image_tag "cat-default-icon.png", alt: "Other category", size: "30x30" %>
<% end %>
