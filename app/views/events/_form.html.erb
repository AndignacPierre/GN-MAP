<div class="form-color container mt-4 form-style">
  <%= simple_form_for event do |f| %>
    <%= f.input :name %>
    <%# theme and choices chekboxes %>
    <div class="row">
      <div class="col-md-6">
        <h4>Select Category</h4>
        <%= f.input :category, as: :select, collection: Event::CATEGORIES, include_blank: false, label: 'Category' %>
      </div>

      <div class="col-md-6">
        <h4>Select Theme</h4>
        <%= f.input :theme, as: :select, collection: Event::THEMES, include_blank: false, label: 'Theme' %>
      </div>
    </div>

    <%# Nombres de participants et prix %>
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-10">
          <div class="row">
            <div class="col-md-6">
              <%= f.input :participants_min, as: :integer, label: 'Minimum Participants', input_html: { step: 1, min: 0 }, hint: 'Enter the minimum number of participants.' %>
            </div>

            <div class="col-md-6">
              <%= f.input :participants_max, as: :integer, label: 'Maximum Participants', input_html: { step: 1, min: 0 }, hint: 'Enter the maximum number of participants.' %>
            </div>
          </div>
        </div>
        <div class="col-md-2">
          <%= f.input :price %>
        </div>
      </div>
    </div>

    <%# DATES %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :date_event%>
      </div>
      <div class="col-md-6">
        <%= f.input :deadline %>
      </div>
    </div>

    <%= f.input :address,
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
    %>
    <%= f.input :content, as: :rich_text_area %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Create Event", class: 'btn btn-primary' %>
  <% end %>
</div>
