<div class="container form-card-style">
  <%= simple_form_for event do |f| %>
    <%# Title and Category %>
    <div class="row">
      <div class="col-md-9">
        <h4 class="text-primary"><strong>Title</strong></h4>
        <%= f.input :name, label: false, placeholder: "Name..." %>
      </div>

      <div class="col-md-3">
        <h4 class="text-primary"><strong>Category</strong></h4>
        <%= f.input :category, as: :select, collection: Event::CATEGORIES, include_blank: false, label: false %>
      </div>
    </div>
    <br>

    <%# Participation and Price %>
    <div class="row">
    <h4 class="text-primary"><strong>Participation</strong></h4>
      <div class="col-md-4">
        <%= f.input :participants_min, as: :integer, label: false, placeholder: 'Min Participants', input_html: { step: 1, min: 5 } %>
      </div>
      <div class="col-md-4">
        <%= f.input :participants_max, as: :integer, label: false, placeholder: 'Max Participants', input_html: { step: 1, min: 10 } %>
      </div>
      <div class="col-md-4">
        <%= f.input :price, label: false, placeholder: 'Price..' %>
      </div>
    </div>
    <br>

    <%# Dates %>
    <div class="row">
      <div class="col-md-6">
        <h4 class="text-primary"><strong>Event Date</strong></h4>
        <%= f.input :date_event, label: false %>
      </div>
      <div class="col-md-6">
        <h4 class="text-primary"><strong>Event Deadline</strong></h4>
        <%= f.input :deadline, label: false %>
      </div>
    </div>
    <br>

    <%# Address %>
    <h4 class="text-primary"><strong>Address</strong></h4>
    <%= f.input :address, label: false,
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
    %>
    <br>

    <%# Description %>
    <h4 class="text-primary"><strong>Description</strong></h4>
    <%= f.input :content, as: :rich_text_area, label: false %>
    <br>

    <%# Photos %>
    <h4 class="text-primary"><strong>Photos</strong></h4>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
    <br>

    <%# Submit %>
    <%= f.submit "Create Event", class: 'btn btn-primary btn-lg link-underline link-underline-opacity-0 mb-3 mt-2' %>
  <% end %>
</div>
