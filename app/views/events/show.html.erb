<div class="container d-flex justify-content-center mt-4">
  <div class="row w-100">
    <div class="col-7">
      <div class="card">
        <%= render 'layouts/carousel' %>
      </div>
    </div>
    <div class="col-5">
      <div class="card border-0 sticky-top-mod" style="width: 90%"> <!-- ajout de sticky-top -->
        <div class="card-body">
          <h1 class="text-dark-green"><strong><%= @event.name %></strong></h1>
          <div class="d-flex align-items-center mb-3">
            <img src="<%= asset_path('clock-icon.png') %>" alt="Clock Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
            <p class="card-text mt-0
              <% if @days_left > 0 %> text-green
                <% elsif @days_left == 0 %> text-red
                <% else %> text-grey
              <% end %>">
              <% if @days_left > 0 %>
                <%= pluralize(@days_left, 'day') %> left until the event!
              <% elsif @days_left == 0 %>
                The event closes today, hurry up!
              <% else %>
                Event has passed.
              <% end %>
            </p>
          </div>
          <div class="d-flex align-items-center mb-3">
            <img src="<%= asset_path('calendar-icon.png') %>" alt="Calendar Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
            <p class="card-text mt-0"><%= @event.date_event %></p>
          </div>
          <div class="card-event rounded-3 d-flex mb-3">
            <%= render 'layouts/set_vava', vava: @event.user %>
            <p>Organised by <%= @event.user.username %></p>
          </div>
          <div class="d-flex fs-1 justify-content-between">
            <p><strong><%= @event.price %> €</strong></p>
            <i class="fa-regular fa-heart"></i>
          </div>
          <a href="#" class="btn btn-primary rounded-pill w-100">
            <i class="fa-solid fa-circle-arrow-right me-2"></i>Participate now
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-5 mb-5">
  <div class="card">
    <div class="card-body">
      <h5 class="text-dark-green">About this event</h5>
      <%= content_tag :div, @event.content, class: "card-text" %>
    </div>
  </div>
</div>

<hr>
<div class="container mt-4">
  <div>
    <h5><strong>Where the location will be:</strong></h5>
    <p><%= @event.address %></p>
  </div>
  <div class="mb-5" style="width: 100%; height: 500px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

