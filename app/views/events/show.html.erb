<div class="container d-flex justify-content-center mt-4">
  <div class="row w-100">
    <div class="col-7">
      <div class="card">
        <%= render 'layouts/carousel' %>
      </div>
    </div>
    <div class="col-5">
      <div class="card sticky-top rounded-4" style="width: 100%"> <!-- ajout de sticky-top -->
        <div class="card-body">
          <h5 class="card-title"><strong><%= @event.name %></strong></h5>
          <div class= "d-flex align-items-center mb-3">
            <i class="fa-regular fa-calendar me-2 ms-1"></i>
            <p class="card-text mt-0"><%= @event.date_event %></p>
          </div>
          <div class="d-flex align-items-center mb-3">
            <i><img src="/icons/Profile.png" alt="Profile Icon" class="icon-class me-2"></i>
            <p class="card-text mt-0"><%= @event.participants_min %> to <%= @event.participants_max %></p>
          </div>
          <div class= "d-flex align-items-center mt-1 mb-3">
            <i><img src="/icons/Locationpin.png" alt="Locationpin Icon" class="icon-class"></i>
            <p class="card-text mt-0"><%= @event.address %></p>
          </div>
          <div class="card-body bg-light rounded-5 d-flex mb-3">
            <img src="<%= @event.user.avatar %>" alt="" class="avatar img-fluid rounded-circle">
            <p>Organisé par <%= @event.user.username %></p>
          </div>
          <div class="d-flex fs-3 justify-content-between">
            <p><%= @event.price %> €</p>
            <i class="fa-regular fa-heart"></i>
          </div>
          <a href="#" class="btn btn-primary rounded-pill w-100">Participate now</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">About this event</h5>
      <%= content_tag :div, @event.content, class: "card-text" %>
    </div>
  </div>
</div>

<div style="width: 100%; height: 500px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

    <%= link_to "Retour à l'index", events_path, class: "btn btn-primary" %>
