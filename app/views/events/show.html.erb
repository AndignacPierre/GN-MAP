<div class="container d-flex justify-content-center mt-4">
  <div class="row w-100">
    <div class="col-7">
      <div class="card">
        <%= render 'layouts/carousel' %>
      </div>
    </div>
    <div class="col-5">
      <div class="card rounded-4 sticky-top" style="width: 100%"> <!-- ajout de sticky-top -->
        <div class="card-body">
          <h1 class="card-title"><strong><%= @event.name %></strong></h1>
          <div class="d-flex align-items-center mb-3">
            <img src="<%= asset_path('calendar-icon.png') %>" alt="Calendar Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
            <p class="card-text mt-0"><%= @event.date_event %></p>
          </div>
          <div class="d-flex align-items-center mb-3">
            <img src="<%= asset_path('participants-icon.png') %>" alt="Participants Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
            <p class="card-text mt-0"><%= @event.participants_min %> to <%= @event.participants_max %></p>
          </div>
          <div class= "d-flex align-items-center mt-1 mb-3">
            <img src="<%= asset_path('location-icon.png') %>" alt="Participants Icon" class="me-2 ms-1" style="width: 24px; height: 24px;">
            <p class="card-text mt-0"><%= @event.address %></p>
          </div>
          <div class="event-card bg-light rounded-5 d-flex mb-3">
            <%= render 'layouts/set_vava', vava: @event.user %>
            <p>Organised by <%= @event.user.username %></p>
          </div>
          <div class="d-flex fs-3 justify-content-between">
            <p><strong><%= @event.price %> €</strong></p>
            <i class="fa-regular fa-heart"></i>
          </div>
          <a href="#" class="btn btn-primary rounded-pill w-100">
            <i class="fa-solid fa-circle-arrow-right me-2"></i>Participate now
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mb-5">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">About this event</h5>
      <p class="card-text"><%= @event.description %></p>
    </div>
  </div>
</div>
<hr>
<div class="container mt-4">
  <div>
    <h5><strong>Where the location will be:</strong></h5>
    <p><%= @event.address %></p>
  </div>
  <div class="mb-5" style="width: 100%; height: 500px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

