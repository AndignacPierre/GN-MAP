<div>
  <div class="container d-flex mt-4">
    <div class="row w-100">
      <div class="col-8">
        <div>
          <!-- Carousel -->
          <%= render 'layouts/carousel' %>
          <!-- About this event -->
          <div class="mt-4">
            <div class="rounded-3 d-flex flex-column mb-2 align-items-start">
              <div class="d-flex align-items-center">
                <div class="avatar-container-show">
                  <%= render 'layouts/set_vava', vava: @event.user %>
                </div>
                <div class="ms-2 d-flex flex-column justify-content-center">
                  <p class="mb-1">Organised by <%= @event.user.username %></p>
                  <div class="d-flex align-items-center rating-container">
                    <i><img src="/icons/Star.png" alt="Star Icon" class="icon-size me-2"></i>
                    <p class="card-text mb-0"><%= 5 %> (<%= rand(1..100) %>)</p>
                  </div>
                </div>
              </div>
            </div>
            <hr style="width: 50%">
            <div class="card-text">
              <div id="event-content" class="text-clamp">
                <%= @event.content %>
              </div>
              <a href="javascript:void(0);" id="see-more-link" class="text-primary">See more</a>
            </div>
          </div>
          <br>
          <div class="mt-2">
            <%= render "participants_show_event", event: @event %>
          </div>
        </div>
      </div>

      <div class="card-body col-4">
        <div class="card card-shadow sticky-top-mod" style="width: 90%; margin: 0px 50px; padding: 10px;">
          <div>
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h1 class="text-dark-green mb-0"><strong><%= @event.name %></strong></h1>
              <i class="fa-regular fa-heart fs-1"></i>
            </div>
            <div class="d-flex align-items-center mb-3">
              <i class="fa-solid fa-clock me-2 ms-1 text-dark-green"></i>
              <p class="card-text mt-0
                <% if @days_left > 0 %>
                  <% elsif @days_left == 0 %> text-red
                  <% else %> text-grey
                <% end %>">
                <% if @days_left > 0 %>
                  <%= pluralize(@days_left, 'day') %> left until the event!
                <% elsif @days_left == 0 %>
                  The event closes today, hurry up!
                <% else %>
                  Event has passed.
                <% end %>
              </p>
            </div>
            <div class="d-flex align-items-center mb-3">
              <i class="fa-solid fa-calendar-check me-2 ms-1 text-dark-green"></i>
              <p class="card-text mt-0"><%= @event.date_event %></p>
            </div>
            <div class="align-items-center">
              <% if current_user.subs.exists?(event: @event) %>
                <%= link_to "#", class: "btn btn-primary btn-lg w-100 link-underline link-underline-opacity-0 mt-2 pt-2 px-1 fs-4 text-light disabled" do %>
                  <i class="fa-solid fa-circle-check me-2"></i>
                  Booked
                <% end %>
              <% else %>
                <%= link_to event_subs_path(@event), data: { turbo_method: "POST" }, class: "btn btn-primary btn-lg w-100 link-underline link-underline-opacity-0" do %>
                Join the event | <%= @event.price.to_i %> â‚¬
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <div class="container mt-4">
    <div>
      <h5>Where the location will be:</h5>
      <p><%= @event.address %></p>
    </div>
    <div class="mb-5" style="width: 100%; height: 500px; border-radius: 10px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  <%= link_to "Back to events", events_path, class: "btn-custom-not-selected mt-1 mb-4"%>
  </div>
