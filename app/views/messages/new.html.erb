<div class="container form-card-style mt-3">
  <%= simple_form_for @message do |f| %>
    <%# Title and Category %>
    <div class="">
      <div class="">
        <h4 class="text-primary"><strong>Object</strong></h4>
        <%= f.input :title, label: false, placeholder: "Object..." %>
      </div>

<div class="">
  <h4 class="text-primary"><strong>To</strong></h4>
  <%= f.input :receiver_id, collection: User.all, label_method: :username, value_method: :id, label: false, prompt: 'Select a username', input_html: { class: 'form-control' } %>
</div>

      <div class="">
        <h4 class="text-primary"><strong>Message</strong></h4>
        <%= f.input :content, as: :text, label: false, placeholder: "Message..." %>

      </div>
    </div>
    <br>

    <%= f.submit "Send Message", class: 'btn btn-primary btn-lg link-underline link-underline-opacity-0 mb-3 mt-2' %>
  <% end %>
</div>
