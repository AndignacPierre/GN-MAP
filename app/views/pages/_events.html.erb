<%= turbo_frame_tag :events_frame do %>
  <div class="d-flex flex-wrap">
    <% @events.each do |event| %>
      <div class="card m-3" style="width: 18rem; border-radius: 15px">
        <%= link_to event_path(event) do %>
          <% if event.photos.attached? %>
            <%= image_tag event.photos.first, class: "card-img-top", alt: event.name, style: "height: 200px; object-fit: cover; width: 100%;" %>
          <% else %>
            <%= image_tag 'no_image.png', class: "card-img-top", alt: "Placeholder", style: "height: 200px; object-fit: cover; width: 100%;" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div>
    <p class="w-100"><%= link_to "Add New Event", events_path, class: "btn btn-primary btn-lg w-100 link-underline link-underline-opacity-0 mb-3 mt-2" %></p>
  </div>
<% end %>
